<h1><%= @album.title %></h1>
<h2><%= "Performed by #{@band.name}" %></h2>
<% if @album.type_of_album == "Studio" %>
  <h2>Performed in Studio</h2>
<% else %>
  <h2>Performed Live</h2>
<% end %>

<h2>Tracks</h2>
<% @album.tracks.each do |track| %>
  <%= link_to track.title, track_url(track) %>
  <br>
<% end %>
<br>


<a href="<%=edit_album_url(@album)%>">Edit Album</a>
<%= link_to @album.band.name, band_url(@album.band) %>
<%= button_to "Delete Album", album_url(@album), method: :delete %>
