<form action="/notes" method="POST">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>"

  <label for="note_comment">Note</label>
  <input
    type="text area"
    name="note[comment]"
    id="note_comment"
  <br>

  <input type="submit" value="Submit this note!">

</form>
