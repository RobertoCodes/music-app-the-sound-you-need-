<h1>Please Enter Band Information!</h1>

<form action="/bands" method="POST">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>"

  <label for="name">Band Name</label>
  <input
    type="text"
    name="band[name]"
    id="band_name"
    value="<%= @band.name %>"
  <br>

  <input type="submit" value="Create Band">

</form>
